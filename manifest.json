{
  "manifest_version": 2,

  "name": "Google Counter",
  "description": "Counts how many times a day the browser visits the Google search page",
  "version": "0.5.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "storage",
    "<all_urls>"
  ],
  "background": {
    "scripts": [
      "eventpage.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "include_globs": [
        "*://www.google.*/*"
      ],
      "js": ["counter.js"]
    }
  ]
}